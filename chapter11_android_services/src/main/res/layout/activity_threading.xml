<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="cvora.chapter11_developing_android_services.ThreadingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello"/>

    <Button
        android:id="@+id/btnStartCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Counter"
        android:onClick="startCounter"/>


    <Button
        android:id="@+id/btnStartCounterUsingHandler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Counter Using Handler"
        android:onClick="startCounterUsingHandler"/>

    <Button
        android:id="@+id/btnStartCounterUsingAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Counter Using AsyncTask"
        android:onClick="startCounterUsingAsyncTask"/>

    <Button
        android:id="@+id/btnStopCounterUsingAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Counter Using AsyncTask"
        android:onClick="stopCounterUsingAsyncTask"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"/>

</LinearLayout>
